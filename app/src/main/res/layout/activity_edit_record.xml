<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditRecordActivity">
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Lesson name"
        android:layout_centerInParent="true"
        android:id="@+id/edit_lesson_name"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:layout_centerInParent="true"
        android:id="@+id/edit_date"
        android:layout_below="@+id/edit_lesson_name"
        android:layout_marginTop="20dp"
        android:focusable="false"

        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Grade"
        android:layout_centerInParent="true"
        android:id="@+id/edit_grade"
        android:layout_below="@+id/edit_date"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_grade"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:id="@+id/edit_record_btn"
        android:text="Изменить"
        android:backgroundTint="@color/reg_btn"/>
</RelativeLayout>